extends layout 

block content
    p 
        a.button(href="/books") Back to All Books
    if error 
        h3= error.message
    if books
        table 
            thead 
                tr 
                    th Title 
                    th Author 
                    th Genre 
                    th Year
            tbody
                each book in books 
                    tr 
                        td 
                            a(href=`/books/${book.id}`)= book.title
                        td= book.author 
                        td= book.genre 
                        td= book.year 
